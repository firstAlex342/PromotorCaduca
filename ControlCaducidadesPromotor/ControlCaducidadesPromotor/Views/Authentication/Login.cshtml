@using ControlCaducidadesPromotor.Basicos
@model UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">

        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <form role="form" method="post" action="/Authentication/DoLogin">
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text"  class="form-control" id="usuario" name="miUsuarioViewModel.Usuario" value="@Model.Usuario"/>
               </div>

                <div class="form-group">
                    <label for="contrasenia">Contraseña</label>
                    <input type="text" class="form-control" id="contrasenia" name="miUsuarioViewModel.Password" value="@Model.Password"/>
                </div>

                <div class="form-group">
                    @*@Html.AntiForgeryToken()*@
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </div>

                <div class="form-group">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>

            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</body>
</html>